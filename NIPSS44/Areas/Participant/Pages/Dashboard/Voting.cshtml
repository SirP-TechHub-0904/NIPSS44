            <h3 class="box-title">PARTICIPANT VOTING</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">

            <div class="row">

                <div class="col-lg-4">
                    <div class="small-box bg-primary" style="height:100px;">
