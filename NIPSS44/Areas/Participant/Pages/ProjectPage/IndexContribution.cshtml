@page
@model NIPSS44.Areas.Participant.Pages.ProjectPage.IndexContributionModel
@{
}
<style>
    /*  .box {
        margin-bottom: 1.25rem;
        box-shadow: 0 1px 3px rgb(237 230 230), 0 1px 2px rgb(237 205 205);
        background-color: #726a6a;
    }*/
    input[type=checkbox], input[type=radio] {
        margin: 0 0;
        margin-top: 1px\9;
        line-height: normal;
        font: inherit;
        color: currentColor;
        width: 2.15em;
        height: 2.15em;
        border: 0.15em solid #3a8ebe;
        border-radius: 50%;
        vertical-align: middle;
    }

    .custom-control-label {
        font-size: 18px;
    }
</style>
<div class="content">
    <div class="row">
        <div class="col-xl-12">

            <!-- Traffic sources -->
            <div class="box" style="margin:5px;">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">CONTRIBUTION AMOUNT VOTING </h3>

                    </div>
                    <div class="box-header">
                        <h3 class="box-title">
                            Dear participants, this is a voting pool to enable us decide how much we give to iyr colleague that invites us for their direct ceremony or demise if very close relative (mother, father, wife, husband) or even demise of any of us.
                            <br />
                            Let us kindly vote for these four options
                        </h3>
                       

                        <h6>Your Voting with <i><strong><u>@Model.Email</u></strong></i>.... Kindly Sign Out if not your email.</h6>
                    </div>
                </div>
                <div class="box" style="margin:5px;">
                    <div class="box-body">
                        <form method="post">
                            <input type="hidden" asp-for="Email" hidden="hidden" />

                            <div class="form-group">

                                <label class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" required="required" class="custom-control-input" asp-for="LegacyProjectAnswer.Answer" value="C1">
                                    <span class="custom-control-label">@Model.LegacyProject.C1</span>
                                </label>


                            </div>
                            <div class="form-group">

                                <label class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" required="required" class="custom-control-input" asp-for="LegacyProjectAnswer.Answer" value="C2">
                                    <span class="custom-control-label">@Model.LegacyProject.C2</span>
                                </label>


                            </div>
                            <div class="form-group">

                                <label class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" required="required" class="custom-control-input" asp-for="LegacyProjectAnswer.Answer" value="C3">
                                    <span class="custom-control-label">@Model.LegacyProject.C3</span>
                                </label>


                            </div>
                            <div class="form-group">

                                <label class="custom-control custom-radio custom-control-inline">
                                    <input type="radio" required="required" class="custom-control-input" asp-for="LegacyProjectAnswer.Answer" value="C4">
                                    <span class="custom-control-label">@Model.LegacyProject.C4</span>
                                </label>


                            </div>
                        

                            <div class="">
                                <h3 style="text-align:center;">Kindly Make Sure before Voting...</h3>
                                <input type="submit" class="btn btn-primary btn-lg" style="width:100%;" value="Vote Now" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>